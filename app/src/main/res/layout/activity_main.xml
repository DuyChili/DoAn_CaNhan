<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="90dp"
       android:orientation="horizontal"
       android:gravity="center"
       android:background="#F6CFCF">


       <TextView
           android:layout_width="300dp"
           android:layout_height="wrap_content"
           android:text="Phiếu sách mượn"
           android:textSize="30dp"
           android:gravity="center"/>
       <ImageView
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:src="@drawable/search"/>

   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Ngày"
            android:layout_marginLeft="20dp"


            />
        <ImageView
            android:layout_marginLeft="80dp"
            android:layout_marginRight="10dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/date"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="06/11/2023"
            android:textSize="25dp"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ECE8E8"
        >

        <TextView
            android:id="@+id/tvslSachmuon"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="số lượng: 4"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            />
        <ListView
            android:id="@+id/lvsachdamuon"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:background="@color/white"/>

        <Button
            android:backgroundTint="#2196F3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Thêm"
            android:gravity="center"
            android:layout_gravity="end"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/btnmuonsach_phieumuon"
            />

    </LinearLayout>

    <LinearLayout
        android:background="#F6CFCF"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:gravity="center"

        >
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageView

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/home"
                android:id="@+id/ivhome"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/ivbook"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/book"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#00BCD4"
            >
            <ImageView
                android:id="@+id/ivsachdamuon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/muontrasach"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/ivsettings"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/settings"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>