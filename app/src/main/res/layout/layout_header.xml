<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F4D3D3"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_marginBottom="20dp"
            android:layout_marginTop="50dp"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:src="@drawable/sach"/>
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quản Lý Thư Viện"
            android:textSize="30dp"
            android:textColor="#D30516"
            android:layout_marginBottom="20dp"
            />
        <TextView
            android:layout_width="400dp"
            android:layout_height="2dp"
            android:background="#82BAEC"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >


            <ImageView
                android:layout_marginRight="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/canhan"/>
            <TextView
                android:id="@+id/tvTendangnhap_header"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:text="Huỳnh Văn Duy"/>
        </LinearLayout>



    </LinearLayout>



</LinearLayout>