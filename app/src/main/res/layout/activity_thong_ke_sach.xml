<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ThongKe_Sach">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#F6CFCF">

        <ImageView
            android:id="@+id/ivthoat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/thoat"/>
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Thống Kê"
            android:textSize="30dp"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Spinner

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/spNgaythang"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#E4E1E1"
        >


        <LinearLayout
            android:background="@drawable/border_radiu"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/ivhinh_thongke"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="200dp"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên Sách"
                android:textSize="20dp"
                android:id="@+id/tvtensachthongke"/>
            <Spinner
                android:layout_marginBottom="20dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/spTenSachthongke"
                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center"
        android:background="#0288D1"

        >
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số Lượng Sách"
            android:textSize="25dp"/>
        <TextView
            android:textColor="#ED0D0D"
            android:id="@+id/tvsoluongsach"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <LinearLayout
            android:background="@drawable/border_thongke"

            android:layout_width="350dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Đã mượn"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/tvsoluongsachmuon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="center"/>


            </LinearLayout>
            <TextView
                android:layout_width="250dp"
                android:layout_height="2dp"
                android:background="#ED1A1A"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng sách mượn trong tháng"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvtongsachmuon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center"/>



        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/border_tongsach"

        >
        <TextView

            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tổng tất cả các sách"
            android:textSize="25dp"/>
        <TextView
            android:textColor="#ED0D0D"
            android:id="@+id/tvtongtatcacacsach_thongke"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20dp"/>

    </LinearLayout>




</LinearLayout>