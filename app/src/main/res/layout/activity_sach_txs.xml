<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Sach_TXS">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#F6CFCF">


        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Sách"
            android:textSize="30dp"
            android:gravity="center"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/search"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginRight="50dp">
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Tất cả"



            />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="180dp"
                android:layout_height="2dp"
                android:background="#FADBDB"/>
        </LinearLayout>

        <TextView
            android:layout_marginRight="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thể loại"
            android:textSize="25dp"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ECE8E8"
        >

        <TextView
            android:id="@+id/tvslSach_TXS"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="số lượng: 4"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            />
        <ListView
            android:id="@+id/lvsachdamuon_TXS"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:background="@color/white"/>

        <Button
            android:backgroundTint="#2196F3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Thêm"
            android:gravity="center"
            android:layout_gravity="end"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/btnthem_TXS"
            />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#F6CFCF"

        >
        <LinearLayout
            android:layout_marginRight="50dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">
            <ImageView

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/home"
                android:id="@+id/ivhome"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="50dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#00BCD4">
            <ImageView
                android:id="@+id/ivbook"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/book"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="50dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            >
            <ImageView
                android:id="@+id/ivsachdamuon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/muontrasach"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/ivsettings"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/settings"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>